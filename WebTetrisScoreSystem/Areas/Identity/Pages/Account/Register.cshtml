@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="offset-4">
    <h1 class="offset-2">@ViewData["Title"]</h1>
    <div>
        <div class="col-md-6">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4 class="offset-2">Create a new account.</h4>

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.UserName"></label>
                    <input asp-for="Input.UserName" class="form-control" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.PlayerNickname"></label>
                    <input asp-for="Input.PlayerNickname" class="form-control" />
                    <span asp-validation-for="Input.PlayerNickname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary offset-4">Register</button>
            </form>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
